@inherits LayoutComponentBase

<style>
    .TopBar .mud-expand-panel, .muudstrap-navbar-expand {
        color: white;
        background-color: blueviolet;
    }
    
    .ButtomBar .mud-expand-panel, .muudstrap-navbar-expand {
        color: var(--mud-palette-appbar-text);
        background-color: var(--mud-palette-appbar-background);
    }

    .muudstrap-navbar .mud-button {
        text-transform: none;
    }

    .muudstrap-navbar .mud-expand-panel-header {
        padding: 0px;
        width: 100%;
        height: 100%;
        flex: none;
    }
</style>
<MudThemeProvider Theme="MuudstrapTheme" />
<TopNav />
<MudMainContent Class="p-0 m-0">
    @Body
</MudMainContent>
@code {
    MudTheme MuudstrapTheme = new MudTheme()
        {

            Palette = new PaletteLight()
            {
                AppbarBackground = "#ffffff",
                AppbarText = "#181819",
                Background = "#f5f5f5"
            },
            Typography = new Typography()
            {
                H6 = new H6()
                {
                    FontSize = "1.25rem",
                    FontWeight = 400,
                    LineHeight = 1.7,
                    LetterSpacing = "normal"
                },
                Button = new Button()
                {
                    FontSize = "1rem",
                    FontWeight = 400,
                    LineHeight = 1.5,
                    LetterSpacing = "normal"
                }
            }
        };
}

